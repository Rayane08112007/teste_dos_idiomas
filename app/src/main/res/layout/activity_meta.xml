<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:background="@drawable/fundoapp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título da meta"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor (R$)"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnAdicionar"
        android:text="Adicionar Meta"
        android:layout_width="match_parent"
        android:backgroundTint="#4A90E2"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnListar"
        android:text="Listar Metas"
        android:backgroundTint="#4A90E2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etIndiceRemover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Índice da meta para remover"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnRemover"
        android:text="Remover Meta"
        android:backgroundTint="#4A90E2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMetas"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"/>

    <Button
        android:id="@+id/btnVoltarHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4A90E2"
        android:text="Voltar para Home"
        android:layout_marginTop="8dp"/>

</LinearLayout>
